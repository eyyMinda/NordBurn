{% assign ss = section.settings %}
{% assign sc = '#shopify-section-' | append: section.id %}
<style>
    /* AS SEEN MARQUEE */
    {{sc}} {
        background-color: {{ ss.bg_color }};
    }
    .{{ section.id }}.marquee {
        max-width: 1440px;
        overflow: hidden;
        white-space: nowrap;
        box-sizing: border-box;
        width: 100%;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        gap: 20px;
        padding: 24px 0;
        margin-inline: auto;
    }
    .{{ section.id }}.marquee.title-inline {
        flex-direction: row;
    }
    .{{ section.id }} .marquee-content {
        display: inline-block;
        white-space: nowrap;
    }

    .{{ section.id }} .marquee-content:hover{
        animation-play-state: paused;
    }

    .{{ section.id }} .marquee-item {
        max-width: 240px;
        display: inline-flex;
        align-items: center;
        gap: 20px;
        margin-left: 25px;
        margin-right: 25px;
        padding-right: 0;
        vertical-align: top;

        font-size: 20px;
        font-weight: 700;
        line-height: 145%;
        text-align: center;
        color: #060346;
    }

    .{{ section.id }} .marquee-item img {
        display: block;
        max-height: 50px;
        width: 100%;
    }

    @keyframes marquee5 {
        from {
            transform: translateX(-50%);
        }
        to {
            transform: translateX(0%);
        }
    }

    .{{ section.id }} .marquee-content {
        animation: marquee5 15s linear infinite;
        display: none;
    }

    .{{ section.id }} .marquee-desktop{
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 50px;
    }
    .{{ section.id }} .marquee:not(.title-inline) .marquee-desktop{
        width: 100%;
    }

    .{{ section.id }} .marquee-desktop .marquee-item{
        margin-left: 0;
        margin-right: 0;
        padding-right: 0;
    }
    
    .as-seen-title{
        text-align: center;
        font-weight: 700;
        margin: 0;
    }

    @media only screen and (max-width: 768px) {
        .{{ section.id }} .marquee-item{
            font-size: 14px;
        }

        .{{ section.id }} .marquee-content {
            display: inline-block;
        }

        .{{ section.id }} .marquee-desktop{
            display: none;
        }

        .{{ section.id }}.marquee {
            flex-direction: column !important;
            padding: 24px 0;
        }

        .{{ section.id }} .marquee-item img {
            max-height: 20px;
        }
    }
</style>
<div class="{{ section.id }} marquee{% if ss.title_inline %} title-inline{% endif %}">
    {% if ss.title != blank %}
        <h2 class="as-seen-title">{{ ss.title }}</h2>
    {% endif %}

    <div class="marquee-desktop">
        {% for block in section.blocks %}
        <div class="marquee-item">
            <img src="{{ block.settings.image | image_url: width: "500px" }}" width="" height="" alt="">
        </div>
        {% endfor %}
    </div>

    <div class="marquee-content" style="animation-duration: {{ section.blocks.size | times: 5 }}s;">
        {% for i in (1..5) %}
            {% for block in section.blocks %}
            <div class="marquee-item">
                <img src="{{ block.settings.image | image_url: width: "500px" }}" width="" height="" alt="">
            </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>

{% schema %}
  {
    "name": "G As Seen",
    "settings": [
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#ffffff"
        }, {
            "type": "checkbox",
            "id": "title_inline",
            "label": "Title Inline"
        }, {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "As Seen In"
        }
    ],
    "blocks": [
      {
        "type": "marquee",
        "name": "Marquee",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "G As Seen"
      }
    ]
  }
{% endschema %}