<style>
    /* MARQUEE */
    .{{ section.id }}.marquee {
        overflow: hidden;
        white-space: nowrap;
        box-sizing: border-box;
        width: 100%;
        background: #F0F2FE;
        position: relative;
        display: flex;
        align-items: center;
        padding: 30px 0;
    }

    .{{ section.id }} .marquee-content {
        display: inline-block;
        white-space: nowrap;
    }

    .{{ section.id }} .marquee-content:hover{
        animation-play-state: paused;
    }

    .{{ section.id }} .marquee-item {
        display: inline-flex;
        align-items: center;
        gap: 20px;
        margin-left: 25px;
        margin-right: 25px;
        padding-right: 0;
        vertical-align: top;

        font-size: 20px;
        font-weight: 700;
        line-height: 145%;
        text-align: center;
        color: #060346;
    }

    .{{ section.id }} .marquee-item img {
        display: block;
        max-height: 60px;
    }

    @keyframes marqueeIcons {
        from {
            transform: translateX(0%);
        }
        to {
            transform: translateX(-50%);
        }
    }

    .{{ section.id }} .marquee-content {
        animation: marqueeIcons 25s linear infinite;
        display: none;
    }

    .{{ section.id }} .marquee-desktop{
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 50px;
        width: 100%;
    }

    .{{ section.id }} .marquee-desktop .marquee-item{
        margin-left: 0;
        margin-right: 0;
        padding-right: 0;
    }

    @media only screen and (max-width: 768px) {
        .{{ section.id }} .marquee-item{
            font-size: 14px;
        }

        .{{ section.id }} .marquee-content {
            display: inline-block;
        }

        .{{ section.id }} .marquee-desktop{
            display: none;
        }

        .{{ section.id }}.marquee {
            padding: 15px 0;
        }

        .{{ section.id }} .marquee-item img {
            max-height: 32px;
        }
    }
</style>
