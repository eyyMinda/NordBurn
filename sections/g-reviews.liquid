<style>
    .g-reviews{
        overflow: hidden;
    }

    .g-review{
        border-radius: 10px;
        overflow: hidden;
    }

    .g-reviews h2{
        text-align: center;
        color: #211948;
        font-weight: 500;
        font-size: 45px;
        line-height: 100%;
        letter-spacing: 0%;
    }

    .g-review-content{
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    .g-review-content {
        padding: 25px;
        display: flex;
        flex-direction: column;
        gap: 20px;
        background: #D6D8F1;
    }

    .g-review-content > span{
        display: flex;
    }

    .g-review-content > span svg{
        width: 16px;
    }

    .g-review-content p{
        font-weight: 400;
        font-size: 16px;
        line-height: 140%;
        letter-spacing: 0%;
        color: #002F2F;
        margin: 0;
    }

    .g-review-content .g-review-name{
        font-weight: 400;
        font-size: 12px;
        line-height: 100%;
        letter-spacing: 0%;
        color: #002F2F;
    }

    .g-review-image{
        position: relative;
        padding-top: 120%;
    }

    .g-review-image img{
        object-fit: cover;
        height: 100%;
        width: 100%;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
    }

    .swiper.g-reviews-slider{
        margin-top: 70px;
        overflow: unset;
    }

    .swiper.g-reviews-slider .swiper-slide{
        max-width: 260px;
    }

    .g-blocks-slides-nav {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        margin-top: 50px;
    }

    .g-blocks-slides-nav .g-next,
    .g-blocks-slides-nav .g-prev{
        width: 40px;
        height: 40px;
        border-radius: 40px;
        border: 1.5px solid #060346;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background-color: #060346;
    }

    .g-blocks-slides-nav .g-next.swiper-button-disabled,
    .g-blocks-slides-nav .g-prev.swiper-button-disabled{
        background: #fff;
        cursor: not-allowed
    }

    .g-blocks-slides-nav svg{
        width: 25px;
        color: #fff;
    }

    .g-blocks-slides-nav .g-next.swiper-button-disabled svg,
    .g-blocks-slides-nav .g-prev.swiper-button-disabled svg{
        color: #060346;
    }

    .g-blocks-slides-nav .swiper-pagination{
        position: relative;
        top: unset;
        left: unset;
        bottom: unset;
        width: auto;
        display: flex;
    }

    .g-blocks-slides-nav .swiper-pagination-bullet{
        width: 12px;
        height: 12px;
        margin: 0 8px !important;
        background: #fff;
        border: 1px solid #060346;
        opacity: 1;
    }

    .g-blocks-slides-nav .swiper-pagination-bullet.swiper-pagination-bullet-active{
        background: #00000052;
        border: 0;
        scale: 1.6;
        position: relative;
    }

    .g-blocks-slides-nav .swiper-pagination-bullet.swiper-pagination-bullet-active::before{
        position: absolute;
        content: '';
        width: calc(100% - 5px);
        height: calc(100% - 5px);
        box-sizing: border-box;
        background: #060346;
        left: 2.5px;
        top: 2.5px;
        border-radius: 100%;
    }

    .g-reviews .g-cta-wrapper{
        margin-top: 50px;
    }

    @media only screen and (max-width: 768px) {
        .swiper.g-reviews-slider .swiper-slide{
            max-width: unset;
        }

        .swiper.g-reviews-slider{
            padding: 0 10%;
            margin-top: 50px;
        }

        .g-reviews h2{
            font-size: 28px;
        }
    }
</style>
<div class="g-sections g-reviews">
    <div class="g-wrap">
        <h2>{{ section.settings.title }}</h2>

        <div class="swiper g-reviews-slider">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                <div class="swiper-slide">
                    <div class="g-review">
                        <div class="g-review-image">
                            <img src="{{ block.settings.image | image_url: width: "500px" }}" width="" height="" alt="">
                        </div>
                        <div class="g-review-content">
