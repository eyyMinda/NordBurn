{% liquid
  assign current_variant = product.selected_or_first_available_variant
  assign sub_variant = current_variant.selling_plan_allocations.first

  assign compare = current_variant.compare_at_price
  assign price = current_variant.price
  assign discount_num = compare | minus: price
  assign discount_perc = discount_num | times: 100 | divided_by: compare

  assign sub_variant_price = sub_variant.price | default: price
  assign sub_variant_save_price_sub = price | minus: sub_variant_price
  assign sub_variant_save_perc_sub = sub_variant_save_price_sub | times: 100 | divided_by: price


  assign subscription_price = sub_variant_price | money | append: ' ' | append: shop.currency
  assign regular_price = price | money | prepend: '<s>' | append: ' ' | append: shop.currency | append: '</s>'
%}

<div class="pdp-frequency frequency-checkbox">
  <div class="pdp-frequency__checkbox-label" data-frequency="subscription">
    <div class="pdp-frequency__checkbox-custom active"></div>
    <div class="pdp-frequency__checkbox-content">
      {% if title != blank %}
        <h3 class="pdp-frequency__checkbox-title">{{ title | replace: '[save_perc]', sub_variant_save_perc_sub }}</h3>
      {% endif %}
      {% if pricing != blank %}
        <p class="pdp-frequency__checkbox-pricing">{{ pricing | replace: '[price]', subscription_price | replace: '[compare_at_price]', regular_price }}</p>
      {% endif %}
      {% if description != blank %}
        <p class="pdp-frequency__checkbox-description">{{ description }}</p>
      {% endif %}
    </div>
  </div>
</div>

